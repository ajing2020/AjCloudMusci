/* pages/index/index.wxss */
.banners{
    width: 100%; 
    height: 300rpx;
}
.banners image{
    width: 100%;
    height: 100%;
}

/* 五个图片导航区 */
.navContainer{
    display: flex;
    
}
.navContainer .navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 20%;
}
.navContainer .navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: #ff2511;
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
}
.navContainer .navItem :last-child{
    font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer{
    padding: 20rpx;
}


.recommendContainer .recommendScroll{
    display: flex;
    height: 300rpx;
}

.recommendContainer .recommendScroll .scrollItem{
    width: 200rpx;
    margin: 0 10rpx;
}
.recommendContainer .recommendScroll .scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.recommendContainer .recommendScroll .scrollItem text{
    font-size: 26rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical ;
    -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList{
    padding: 0 20rpx;
}
.topListSwiper{
    height: 450rpx;
}
.swiperItem {
    width: 96%;
    background: #fbfbfb;
}
.swiperItem .title{
    font-size: 30rpx;
    line-height: 80rpx;
}
.musciItem {
    display: flex;
    margin-bottom: 20rpx;
}
.musciItem image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 6rpx;
}
.musciItem .count {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.musciItem .musicName {
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}